// Charlotte Roofing Hub Database Schema
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Company {
  id           String   @id @default(cuid())
  name         String
  slug         String   @unique
  description  String?  @db.Text
  phone        String?
  email        String?
  website      String?
  address      String?
  city         String   @default("Charlotte")
  state        String   @default("NC")
  zipCode      String?
  googleRating Float?
  reviewCount  Int?
  services     String[] // residential, commercial, repairs, etc.
  materials    String[] // shingle, metal, tile, etc.
  isFeatured   Boolean  @default(false)
  isVerified   Boolean  @default(false)
  logoUrl      String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  jobs         Job[]
}

model Job {
  id          String    @id @default(cuid())
  title       String
  description String    @db.Text
  type        String    // full-time, part-time, contract, commission
  payRange    String?
  companyId   String
  company     Company   @relation(fields: [companyId], references: [id], onDelete: Cascade)
  location    String    @default("Charlotte, NC")
  isApproved  Boolean   @default(false)
  createdAt   DateTime  @default(now())
  expiresAt   DateTime?
}

model Crew {
  id          String   @id @default(cuid())
  name        String
  type        String   // sales-rep, crew-leader, installer, laborer, foreman
  phone       String
  email       String
  experience  String?  // years of experience
  skills      String[] // shingle, metal, repairs, gutters, etc.
  bio         String?  @db.Text
  city        String   @default("Charlotte")
  isAvailable Boolean  @default(true)
  isApproved  Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model BlogPost {
  id          String    @id @default(cuid())
  title       String
  slug        String    @unique
  content     String    @db.Text
  excerpt     String?
  category    String?
  tags        String[]
  author      String    @default("Charlotte Roofing Hub")
  imageUrl    String?
  isPublished Boolean   @default(false)
  publishedAt DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String?
  role      String   @default("user") // admin, company, user
  companyId String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ContactSubmission {
  id        String   @id @default(cuid())
  name      String
  email     String
  phone     String?
  subject   String
  message   String   @db.Text
  createdAt DateTime @default(now())
  isRead    Boolean  @default(false)
}
